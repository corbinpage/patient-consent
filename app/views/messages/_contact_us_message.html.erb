<div class="row">
  <div class="col-lg-12">
    <%= form_for @message, url: '/contact_us'  do |f| %>
    
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Your Name *"%>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "Your Email *"%>
        </div>
        <div class="form-group">
          <%= f.telephone_field :telephone, class: "form-control", placeholder: "Your Phone"%>
        </div>
        <div class="form-group">
          <%= f.file_field 'attachment', multiple: true, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :subject, class: "form-control", placeholder: "Subject"%>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", placeholder: "Your Message" %>
        </div>
      </div>

      <%= f.hidden_field :location_submitted, :value => "home_page" %>

      <div class="clearfix"></div>
      <div class="col-lg-12 text-center">
        <div id="success"></div>
        <%= f.submit("Send Message", class: "btn btn-xl") %>
      </div>
    <% end %>
  </div>
</div>