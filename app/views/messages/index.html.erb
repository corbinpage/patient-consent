<section id="upload" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Email</th>
              <th>Telephone</th>
              <th>Subject</th>
              <th>Body</th>
              <th>Uploads</th>
              <th>Received</th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td><%= message.email %></td>
                <td><%= message.telephone %></td>
                <td><%= message.subject %></td>
                <td><%= message.body %></td>
                <td>
                  <% message.attachments.each do |a| %>
                    <%= link_to a.attachment_file_name, a.attachment.url(:original, false) %><br>
                  <% end %>
                </td>
                <td><%= message.created_at.strftime("%B %d, %Y at %l:%M%p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>