<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">All Procedures</h2>
            <p class="instructions">Lists all procedures ready for review.</p>
          </div>
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @procedures.each do |procedure| %>
              <tr>
                <td><%= link_to procedure.name, procedure %></td>
                <td><%= procedure.category %></td>
                <td><%= link_to 'Consent', consent_new_path(procedure.id) %></td>
                <td><%= link_to 'Edit', edit_procedure_path(procedure) %></td>
                <td><%= link_to 'Delete', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'New Procedure', new_procedure_path %>
      </div>
    </div>
  </div>
</section>
