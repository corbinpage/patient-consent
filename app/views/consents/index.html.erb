<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">Your Consents</h2>
            <p class="instructions">Lists all the consents you've started.</p>
          </div>
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Status</th>
                <th>Procedure</th>
                <th>Indications complete</th>
                <th>Benefits complete</th>
                <th>Risks complete</th>
                <th>Alternatives complete</th>
                <th>Description complete</th>
                <th>Consent complete</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @consents.each do |consent| %>
              <tr>
                <td><%= link_to 'Continue', consent %></td>
                <td><%= consent.procedure.name %></td>
                <td><%= consent.indications_complete %></td>
                <td><%= consent.benefits_complete %></td>
                <td><%= consent.risks_complete %></td>
                <td><%= consent.alternatives_complete %></td>
                <td><%= consent.description_complete %></td>
                <td><%= consent.consent_complete %></td>
                <td><%= link_to 'Edit', edit_consent_path(consent) %> | <%= link_to 'Delete', consent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>