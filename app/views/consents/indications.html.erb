<p id="notice"><%= notice %></p>

<section class="small-section bg-light-gray">
  <div class="container">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading"><%= @consent.procedure.name %></h2>
    </div>
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        <div class="panel panel-consent">
          <div class="panel-heading text-center">

            <span class="fa-stack fa-2x pull-left">
              <!-- <i class="fa fa-circle fa-stack-2x text-primary"></i> -->
              <a class="consent-button" href="<%= new_consent_path(@consent.procedure_id) %>">
                <i class="fa fa-arrow-circle-left fa-stack-2x"></i>
              </a>
            </span>
            <h2 class="panel-title text-center">Indications</h2>
            <span class="fa-stack fa-2x pull-right">
              <!-- <i class="fa fa-circle fa-stack-2x text-primary"></i> -->
              <a class="consent-button" href="<%= consent_benefits_path(@consent.procedure_id, @consent.id)%>">
                <i class="fa fa-arrow-circle-right fa-stack-2x"></i>
              </a>
            </span>
            <!-- <p class="instructions">These are details about indications. </p> -->
          </div>
          <div class="panel-body">

            <div class="row">
              <div class="col-xs-12">
                <h3>Information</h3>
                <p><%= @consent.procedure.procedure_detail.indications_text%></p> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>