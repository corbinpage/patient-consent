<section class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
      <h3>Admin Portal - Listing All Users</h3>
      <table class="table">
        <tr>
          <td>Name</td>
          <td>Internal</td>
          <td>Email</td>
          <td>Telephone</td> 
          <td>Role</td>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= link_to "Manage", manage_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.telephone %></td>
            <td><%= user.role %></td>
          </tr>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</section>